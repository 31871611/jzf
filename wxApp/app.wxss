/**app.wxss**/
page{
  background-color: #eee;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


/* 无相关内容提示 */
.iconPromptInfo{
    padding-top: 285rpx;
}
/* 搜索图标 */
.iconPromptInfo .searchEmpty{
    width:129rpx;
    height:112rpx;
    display: block;
    margin:0 auto;
}
/* 无地址图片 */
.iconPromptInfo .addressEmpty{
    width:140rpx;
    height:162rpx;
    display: block;
    margin:0 auto;
}
/* 订单列表-订单 */
.iconPromptInfo .iconOrderEmpty{
    width:121rpx;
    height:139rpx;
    display: block;
    margin:0 auto;
}

.iconPromptInfo text{
    margin-top:10rpx;
    font-size:28rpx;
    color:#333333;
    display: block;
    text-align: center;
}
.iconPromptInfo .btn{
    margin:40rpx auto 0;
    width:168rpx;
    height:74rpx;
    line-height:74rpx;
    color:#fff;
    text-align:center;
    background:#003347;
    font-size:32rpx;
}


/* 图标按钮栏 */
.itemInfo{
    background: #fff; 
}
.itemInfo .content{
    display: flex;
    align-items: center;
    color: #333;
    margin:0 20rpx;
    height: 90rpx;
}
.itemInfo .txt{
    flex: 1;
    font-size:28rpx;
}
.itemInfo .line{
    height: 1px;
    background-color: #d2d2d2;
    margin:0 20rpx;
}
/* 详情页打电话 */
.itemInfo .iconDetailTel{
    margin-right: 15rpx;
    width:40rpx;
    height:40rpx;
    background-image: url("/public/icon/iconTelC.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: 50% 50%;
}
