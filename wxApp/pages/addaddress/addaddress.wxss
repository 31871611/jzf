/* 添加、编辑地址 */
.addAddress{
    background: #fff;
    font-size:28rpx;
    /*padding-top:20rpx;*/
}
.addAddress .title{
    margin-top:20rpx;
    border-left: 7rpx solid #003347;
    padding: 10rpx 0 10rpx 10rpx;
    font-size:28rpx;
    margin-left:20rpx;
}
.addAddress input.text{
    height:80rpx;
    line-height:80rpx;
    padding-left:10rpx;
    margin:0 20rpx;
    border-bottom:1px solid #d2d2d2;
}
.addAddress .detailed{
    display: flex;
    margin:0 20rpx;
    border-bottom:1px solid #d2d2d2;
}
.addAddress .detailed picker{
    flex: 1;
    height:80rpx;
    line-height:80rpx;
    text-align: right;
}

.addAddress .default{
    border-bottom:1px solid #d2d2d2;
    padding: 10rpx 0;
    margin:0 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.addAddress .default text{
    color:#999;
    /*font-size:24rpx;*/
}
.addAddress .default switch{

}
.addAddress .btn{
    margin:200rpx 20rpx 20rpx 20rpx;
    height:100rpx;
    line-height:100rpx;
    text-align: center;
    font-size:32rpx;
    background:#003347;
    color:#fff;
}

.line{
    background:#d2d2d2;
    height:1px;
}