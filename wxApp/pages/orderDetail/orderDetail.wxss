.state{
    border-top:1px solid #d2d2d2;
    background: #fff;
    margin-bottom: 20rpx;
    padding:10rpx 20rpx;
    font-size:28rpx;
}
.state view{
    line-height:2;
    display: flex;
}
.state text{
    color:#999;
}
.state text.info{
    color:#333;
    flex: 1;
}
.state text.red{
    color:#ea3a38;
}
.state text.prompt{
    font-size:24rpx;
    color:#999;
}

