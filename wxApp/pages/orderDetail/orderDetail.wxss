/* 商品列表-行 */
@import "../../public/wxss/listRow.wxss";

/* 订单付款金款 */
.orderInfo{
    background: #fff;
    margin-top:20rpx;
    padding:10rpx 20rpx;
    font-size:28rpx;
    color:#333;
}
.orderInfo view{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.orderInfo text{
    line-height:2;
}
.orderInfo text.red{
    color:#ea3a38;
}
/* 订单总额 */
.orderTotal{
    margin-bottom:100rpx;
    background: #fff;
    padding:0 20rpx;
    font-size:28rpx;
    color:#333;
    text-align: right;
    line-height:2;
}
.orderTotal text{
    color:#ea3a38;
    font-size:32rpx;
    font-weight: bold;
}

/* 占位空间 */
.placeholder{
    height: 100rpx;
}
/* 浮动按钮 */
.floatBtn{
    height: 100rpx;
    position: fixed;
    left:0;
    bottom:0;
    width:100%;
    display: flex;
}
.floatBtn view{
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color:#333; 
}
.floatBtn view.exit{
    background:#fff;
}
.floatBtn view.buy{
    background:#ea3a38;
    color:#fff;
}





