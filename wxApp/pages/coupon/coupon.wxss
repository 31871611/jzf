/* 优惠券 */
page{
    background:#fff;
}

.coupon{
    padding:20rpx 20rpx 0 20rpx;
    border-top:1rpx solid #d2d2d2;
}

.list{
    height:160rpx;
    position: relative;
    background:#fff;
    margin-bottom: 20rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 13rpx rgba(218,215,215,.9);
}
.list.select .money{
    background:#999;
}
.list.select .use{
    background:#fff;
    color:#999;
}
.list.select .getBtn{
    border-color: #999;
    color: #999;
}

/* 左边价格 */
.money{
    position: relative;
    background: #ea3a38;
    height:160rpx;
    width:170rpx;
    text-align:center;
}
.money .price{
    display: block;
    color:#fff;
    font-size:48rpx;
    margin-top: 35rpx;
}
.money .price text{
    
}
.money .price text:before{
    content: "￥";
    position: relative;
    top:-5rpx;
    font-size:24rpx;
    vertical-align: middle;
}
.money .use{
    background: #fff;
    color:#ea3a38;
    font-size:24rpx;
    text-align:center;
    padding:5rpx;
}
.lineRight{
    position: absolute;
    right:-4rpx;
    top:-4rpx;
    width:8rpx;
    height:8rpx;
}
.lineRight view{
    display: block;
    width:8rpx;
    height:8px;
    border-radius: 50%;
    background-color: #eee;
    margin-bottom:10rpx;
}

/* 右边信息内容 */
.center{
    flex: 1;
}
.center .title,.center .text{
    margin-left:20rpx;
}
.center .title{
    font-size:28rpx;
    color:#333333;
    padding-top:18rpx;
    margin-bottom:14rpx;
}
.center .text{
    height: 40rpx;
    line-height: 40rpx;
    font-size:20rpx;
    position: relative;
    padding-left:16rpx;
    color:#999999;
    display: block;
}
.center .text:after{
    position: absolute;
    left:0;
    top:50%;
    display:block;
    content:"\20";
    width:8rpx;
    height:8rpx;
    margin-top:-4rpx;
    border-radius: 50%;
    background:#999999;
}

/* 领取按钮 */
.getBtn{
    margin:0 10rpx;
    font-size: 20rpx;
    display: block;
    border: 1rpx solid #ea3a38;
    padding:10rpx;
    color: #ea3a38;
    border-radius: 15rpx;
}



/* 购买弹窗 */
.alertConfirmBuy{
    z-index: 100;
    background:#fff;
    position: fixed;
    left:0;
    bottom: 0;
    right: 0;
}
/* 商品信息 */
.product{
    
}

.alertConfirmBuy .titleText{
    color:#666;
    border-top: 1px solid #d2d2d2;
    margin:0 30rpx;
    height:64rpx;
    line-height:64rpx;
    font-size:24rpx;
}

/* 类型选择 */
.alertConfirmBuy .type{
    margin:0 30rpx;
    overflow:hidden;
}
.alertConfirmBuy .type view{
    float:left;
    height:60rpx;
    line-height:60rpx;
    margin:0 20rpx 20px 0;
    padding:0 26rpx;
    background:#eeeeee;
    color:#333;
}
.alertConfirmBuy .type view.select{
    color:#fff;
    background: #ea3a38;
}

/* 数量选择 */
.alertConfirmBuy .number{
    height:105rpx;
}
.alertConfirmBuy .reduce{
    
}
.alertConfirmBuy .add{
    
}

.alertConfirmBuy .reduce,.alertConfirmBuy .add{
    vertical-align: top;
    display: inline-block;
    width:90rpx;
    height:105rpx;
}
.alertConfirmBuy .reduce text,.alertConfirmBuy .add text{
    height:60rpx;
    width:60rpx;
    background:#dddddd;
    position: relative;
    display: block;
}
.alertConfirmBuy .reduce text{
    margin-left:auto;
}
.alertConfirmBuy .reduce text:after,.alertConfirmBuy .add text:after,.alertConfirmBuy .add text:before{
    content: "\20";
    position: absolute;
    left:50%;
    top:50%;
    background:#999999;
}
.alertConfirmBuy .reduce text:after,.alertConfirmBuy .add text:after{
    width:28rpx;
    height:4rpx;
    margin:-2rpx 0 0 -14rpx;
}
.alertConfirmBuy .add text:before{
    width:4rpx;
    height:28rpx;
    margin:-14rpx 0 0 -2rpx;
}

.alertConfirmBuy input[type='number']{
    vertical-align: top;
    display: inline-block;
    /*float:left;*/
    height: 60rpx;
    width: 70rpx;
    border: 0;
    font-size: 36rpx;
    text-align: center;
    background: #e5e5e5;
    margin:0 4rpx;
}
/* 不可加减 */
.alertConfirmBuy .reduce.select text,.alertConfirmBuy .add.select text{
    background:#eeeeee;
}
.alertConfirmBuy .reduce.select text:after,.alertConfirmBuy .add.select text:after,.alertConfirmBuy .add.select text:before{
    background:#fff;
}


/* 购买按钮 */
.alertConfirmBuy .btn{
    border-top: 1px solid #d2d2d2;
    padding: 10rpx 0;
    margin: 0;
}

.alertConfirmBuy .btn view{
    text-align: center;
    font-size:32rpx;
    height:76rpx;
    line-height:76rpx;
    background: #ea3a38;
    color:#fff;
    margin:0 30rpx;
}


/* 关闭弹窗按钮 */
.alertConfirmBuy .exit{
    position: absolute;
    right:30rpx;
    top:14rpx;
    border:2rpx solid #999999;
    width:42rpx;
    height: 42rpx;
    border-radius: 50%;
    transform: rotate(45deg);
}
.alertConfirmBuy .exit:after,.alertConfirmBuy .exit:before{
    content: "\20";
    position: absolute;
    background:#999999;
    left:50%;
    top:50%;
}
.alertConfirmBuy .exit:before{
    width: 28rpx;
    height: 2rpx;
    margin-left:-14rpx;
    margin-top:-1rpx;
}
.alertConfirmBuy .exit:after{
    width: 2rpx;
    height: 28rpx;
    margin-left:-1rpx;
    margin-top:-14rpx;
}




