/* 优惠券 */
page{
    background:#fff;
}

.coupon{
    padding:20rpx 20rpx 0 20rpx;
    border-top:1rpx solid #d2d2d2;
}

.list{
    height:160rpx;
    position: relative;
    background:#fff;
    margin-bottom: 20rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 13rpx rgba(218,215,215,.9);
}
.list.select .money{
    background:#999;
}
.list.select .use{
    background:#fff;
    color:#999;
}
.list.select .getBtn{
    border-color: #999;
    color: #999;
}

/* 左边价格 */
.money{
    position: relative;
    background: #ea3a38;
    height:160rpx;
    width:170rpx;
    text-align:center;
}
.money .price{
    display: block;
    color:#fff;
    font-size:48rpx;
    margin-top: 35rpx;
}
.money .price text{
    
}
.money .price text:before{
    content: "￥";
    position: relative;
    top:-5rpx;
    font-size:24rpx;
    vertical-align: middle;
}
.money .use{
    background: #fff;
    color:#ea3a38;
    font-size:24rpx;
    text-align:center;
    padding:5rpx;
}
.lineRight{
    position: absolute;
    right:-4rpx;
    top:-4rpx;
    width:8rpx;
    height:8rpx;
}
.lineRight view{
    display: block;
    width:8rpx;
    height:8px;
    border-radius: 50%;
    background-color: #eee;
    margin-bottom:10rpx;
}

/* 右边信息内容 */
.center{
    flex: 1;
}
.center .title,.center .text{
    margin-left:20rpx;
}
.center .title{
    font-size:28rpx;
    color:#333333;
    padding-top:18rpx;
    margin-bottom:14rpx;
}
.center .text{
    height: 40rpx;
    line-height: 40rpx;
    font-size:20rpx;
    position: relative;
    padding-left:16rpx;
    color:#999999;
    display: block;
}
.center .text:after{
    position: absolute;
    left:0;
    top:50%;
    display:block;
    content:"\20";
    width:8rpx;
    height:8rpx;
    margin-top:-4rpx;
    border-radius: 50%;
    background:#999999;
}

/* 领取按钮 */
.getBtn{
    margin:0 10rpx;
    font-size: 20rpx;
    display: block;
    border: 1rpx solid #ea3a38;
    padding:10rpx;
    color: #ea3a38;
    border-radius: 15rpx;
}

/* 显示与关闭 */
.SlideTopBottom-enter{
    animation: SlideTopToBottom 400ms;
}
.SlideTopBottom-leave{
    animation: SlideBottomToTop 400ms;
}
@keyframes SlideBottomToTop{
    0%{
        transform: translateY(0%);
    }
    100%{
        transform: translateY(100%);
    }
}
@keyframes SlideTopToBottom{
    0%{
        transform: translateY(100%);
    }
    100%{
        transform: translateY(0%);   
    }
}
