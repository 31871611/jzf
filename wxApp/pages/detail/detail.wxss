/* 轮播 */
.detailSideslip{
    height: 750rpx;
    background: #fff;
}
.detailSideslip .slide-image{
    height: 750rpx;
    width:100%;
}
/* 藏品标题 */
.detailTitle{
    padding: 10rpx 20rpx;
    background: #fff;
    font-size:32rpx;
    line-height: 1.5;
    color:#333;
}
/* 价格与关注 */
.detaiSubTitle{
    background: #fff;
    display: flex;
    align-items: center;
    padding:0 20rpx 10rpx;
}
.detaiSubTitle .price{
    flex: 1;
    font-size:42rpx;
    font-weight:bold;
    color: #ea3a38;
}
.detaiSubTitle .love{
    display: flex;
    align-items: center;
    height:36rpx;
    color:#333;
    font-size:24rpx;
    padding:15rpx 0 15rpx 15rpx;
}
.detaiSubTitle .love:before{
    content: "\20";
    width:36rpx;
    height:36rpx;
    background-size:contain;
    background-repeat: no-repeat;
    background-position: 50% 50%;
    background-image:url("../../public/icon/iconLoveC.png");
    display:block;
    margin-right:10rpx;
}
.detaiSubTitle .love.select:before{
    background-image:url("../../public/icon/iconLoveS.png");
}

/* 藏品详情 */
.detailInfo{
    padding: 5rpx 20rpx 10rpx;
    background: #fff;
    font-size:28rpx;
    line-height:50rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}
.detailInfo .title{
    line-height:normal;
    font-size:24rpx;
    color:#666;
    border-bottom:1px solid #d2d2d2;
    margin:0 0 5rpx 0;
    padding: 20rpx 0 20rpx 0;
}

/* 售后服务说明 */
.detailExplain{
    background: #fff;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    padding-bottom:20rpx;
    color:#333;
    font-size:24rpx;
}
.detailExplain .title{
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #d2d2d2;
    margin: auto 20rpx;
    color:#666;
}
.detailExplain .contnte{
    padding: 20rpx 20rpx 0 20rpx;
    line-height:1.5;
}
.detailExplain .photo{
    width:100%;
    margin-top:20rpx;
}

/* 购买按钮 */
.detailBtnPlaceholder{
    height:100rpx;
}
.detailBtn{
    display: flex;
    width:100%;
    position: fixed;
    left:0;
    bottom:0;
}
.detailBtn .buy,.detailBtn .not{
    flex: 1;
    text-align: center;
    height:100rpx;
    line-height:100rpx;
    color: #fff;
    font-size:32rpx;
}
.detailBtn .buy{
    background: #ea3a38;
}
.detailBtn .not{
    background: #999999;
}
