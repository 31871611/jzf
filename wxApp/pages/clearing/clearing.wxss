/* 标题 */
.clearingTitle{
    height:80rpx;
    line-height:80rpx;
    margin-left:20rpx;
    font-size:28rpx;
    color:#333;
}

/* 配送方式 */
.clearingTab{
    background: #fff;
    padding:15rpx 0;
    font-size:28rpx;
    color:#333;
    display: flex;
}
.clearingTab label{
    flex: 1;
    padding-left:20rpx;
    /*text-align: center;*/
}
.clearingTab text{
    vertical-align: middle;
}

/* 藏品物流保价 */
.insuredInfo{
    background: #fff;
    padding:5rpx 20rpx 15rpx;
    font-size:28rpx;
    color:#333;
}
.insuredInfo .subTitle{
    font-size:28rpx;
    height:60rpx;
    line-height:60rpx;
}
.insuredInfo .subTitle text{
    color:#ea3a38;
    font-weight: bold;
}
.insuredInfo .content{
    font-size:24rpx;
    color:#999;
    line-height:1.5;
}
.insuredInfo .content text{
    color:#ea3a38;
}
.insuredInfo .content navigator{
    color:#3366cc;
    display: inline-block;
}

/* 配送地址 */
.clearingAddress{
    background: #fff;
    font-size:28rpx;
    color:#333;
}

.clearingAddress .not{
    padding:30rpx 20rpx;
    text-align: right;
}
.clearingAddress .not:after{
    content: "\20";
    width:14rpx;
    height:24rpx;
    display: inline-block;
    vertical-align: middle;
    margin-left:20rpx;
    background-image: url(../../public/icon/iconArrowR.png);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: 50% 50%;
}
.clearingAddress .yes{
    padding:10rpx 20rpx;
    display: flex;
    align-items: center;
}
.clearingAddress .yes:after{
    content: "\20";
    width:14rpx;
    height:24rpx;
    display: inline-block;
    vertical-align: middle;
    margin-left:20rpx;
    background-image: url(../../public/icon/iconArrowR.png);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: 50% 50%;
}
.clearingAddress .yes .content{
    flex: 1;
}
.clearingAddress .yes .title{
    display: flex;
    justify-content: space-between;
    line-height:2;
}
.clearingAddress .yes .addressInfo{
    line-height:1.5;
}

/* 自提信息 */
.clearingCompany{
    background: #fff;
    padding:0 20rpx;
    font-size:28rpx;
    color:#333;
}
.clearingCompany .info{
    border-bottom: 1px solid #d2d2d2;
    line-height:1.5;
    padding:15rpx 0;
}
.clearingCompany .next{
    padding:20rpx 0;
    display: flex;
    align-items: center;
}
.clearingCompany .next text{
    display: block;
}
.clearingCompany .next view{
    text-align: right;
    flex: 1;
}
.clearingCompany .next:after{
    content: "\20";
    width:14rpx;
    height:24rpx;
    display: block;
    margin-left:20rpx;
    background-image: url(../../public/icon/iconArrowR.png);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: 50% 50%;
}

/* 身份信息 */
.clearingUser{
    background: #fff;
    padding:30rpx 20rpx 20rpx;
    font-size:28rpx;
    color:#333;
}
.clearingUser label{
    display: flex;
    font-size:32rpx;
    height:60rpx;
    margin-bottom: 20rpx;
}
.clearingUser label text{
    height:60rpx;
    line-height:60rpx;
    width:170rpx;
    font-size:32rpx;
}
.clearingUser label input{
    flex: 1;
    display: block;
    border:1px solid #d2d2d2;
    /*width:100%;*/
    /*text-indent: 28rpx;*/
    padding-left:10rpx;
    height:58rpx;
    color:#333;
    background: #fff;
}
.clearingUser view{
    padding-top:10rpx;
    line-height:1.5;
}
.clearingUser navigator{
    display: inline-block;
    color:#3366cc;
}

/* 商品列表-行 */
@import "../../public/wxss/listRow.wxss";

/* 抵用券 */
.voucher{
    background: #fff;
    padding:5rpx 20rpx;
    font-size:28rpx;
    color:#333;
}
.voucher label{
    display: block;
    padding:10rpx 0;
}
.voucher text{
    vertical-align: middle;
}

/* 订单信息 */
.clearingOrderInfo{
    margin-top:20rpx;
    background: #fff;
    padding:10rpx 20rpx;
}
.clearingOrderInfo .list{
    display: flex;
    align-items: center;
    justify-content:space-between;
}
.clearingOrderInfo .list view{
    height:50rpx;
    line-height:50rpx;
    color:#333;
    font-size:32rpx;
}
.clearingOrderInfo .list .red{
    color:#ea3a38;
}
/* 售后条款 */
.isService{
    height:90rpx;
    margin-top:20rpx;
    margin-bottom:20rpx;
    background:#fff;
    text-align:center;
}
.isService label{
    display: flex;
    justify-content: center;
    align-items: center;
}
.isService checkbox{
    display: block;
    border-radius: 50%;
}
.isService text{
    display: block;
    height:90rpx;
    line-height:90rpx;
    color:#333;
    font-size:24rpx;
}
.isService navigator{
    display: block;
    height:90rpx;
    line-height:90rpx;
    color:#3366cc;
    font-size:24rpx;
}

/* 支付按钮 */
.btn{
    margin:10rpx 20rpx 0;
    border-radius: 4rpx;
    border:1px solid #d2d2d2;
    background: #fff;
    height:99rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.btn text{
    display: block;
    color:#333;
    font-size:32rpx;
    position: relative;
}
.btn .wx{
    margin-right:20rpx;
    width: 44rpx;
    height: 36rpx;
    background-image: url("../../public/icon/iconWeiXin.png");
    background-size:contain;
    background-repeat: no-repeat;
    background-position: 50% 50%;
}

/* 占位 */
.placeholder{
    height: 100rpx;
}